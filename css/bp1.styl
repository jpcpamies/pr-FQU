// Acciones al activar el mainCheck				
#mainCheckbox
	display none
#mainCheckbox:checked ~ .calendario 
	margin -80px 0 0 0 
	width 100%
#mainCheckbox:checked ~ .calendario .listaDias 
	display block
#mainCheckbox:checked ~ .calendario .timelineOuterbp1 
	display block
#mainCheckbox:checked ~ .calendario .tituloOuter 
	display block
#mainCheckbox:checked ~ .llamadaCalendarioLabel
	background none
#mainCheckbox:checked ~ .llamadaCalendarioLabel .botonLabel 
	transform rotateZ(180deg)
	-ms-transform rotateZ(180deg)
	-webkit-transform rotateZ(180deg)
#mainCheckbox:checked ~ .llamadaCalendarioTitulo
	margin-left -100%
#mainCheckbox:checked ~ .seccionesContenido
	margin-left -100%

// Animaciones
@keyframes animacion
	0%
		transform translate(-150%, -150%)
		-ms-transform translate(-150%, -150%)
		-webkit-transform translate(-150%, -150%)
	50%
		transform translate(40%, 10%)
		-ms-transform translate(40%, 10%)
		-webkit-transform translate(40%, 10%)

	100%
		transform translate(-150%, -150%)
		-ms-transform translate(-150%, -150%)
		-webkit-transform translate(-150%, -150%)

@keyframes timeLine
	0%
		opacity 0
	100%
		opacity 1

@keyframes timeLineLento
	0%
		opacity 0
	90%
		opacity 0
	100%
		opacity 1

